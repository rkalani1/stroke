{
  "name": "stroke",
  "version": "5.13.0",
  "description": "A client-side clinical decision support toolkit for stroke management with encounter workflows, calculators, protocols, trials, and evidence references.",
  "main": "service-worker.js",
  "scripts": {
    "validate:citations": "node ./scripts/validate-citations.mjs",
    "validate:citations:links": "node ./scripts/validate-citations.mjs --check-links",
    "validate:citations:ids": "node ./scripts/validate-citations.mjs --check-identifiers",
    "validate:evidence-promotion": "node ./scripts/validate-evidence-promotion.mjs",
    "evidence:watch": "node ./scripts/evidence-watch.mjs",
    "evidence:watch:filtered-all": "node ./scripts/evidence-watch.mjs --filtered-all",
    "evidence:watch:dominance": "node ./scripts/evidence-watch.mjs --filtered-dominance-threshold 0.6",
    "evidence:promote": "node ./scripts/evidence-promotion-checklist.mjs",
    "evidence:template": "node ./scripts/evidence-promotion-template.mjs",
    "evidence:template:p0": "node ./scripts/evidence-promotion-template.mjs --priority p0 --output docs/evidence-promotion-template-p0.md",
    "evidence:template:top5": "node ./scripts/evidence-promotion-template.mjs --limit 5",
    "evidence:index": "node ./scripts/evidence-ops-index.mjs",
    "evidence:refresh": "npm run evidence:watch && npm run evidence:promote && npm run evidence:template && npm run evidence:template:p0 && npm run evidence:index && npm run validate:evidence-promotion",
    "test": "npm run validate:citations && npm run validate:evidence-promotion && node ./scripts/qa-smoke.mjs --local-only",
    "qa": "npm run validate:citations && npm run validate:evidence-promotion && node ./scripts/qa-smoke.mjs",
    "build:css": "tailwindcss -i ./src/styles.css -o ./tailwind.css --minify",
    "build:js": "esbuild ./src/app.jsx --bundle --minify --format=iife --target=es2018 --outfile=./app.js",
    "build": "npm run build:css && npm run build:js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "lucide": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "playwright": "^1.57.0",
    "tailwindcss": "^3.4.10",
    "esbuild": "^0.24.0"
  }
}
